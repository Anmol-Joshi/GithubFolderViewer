{
  "manifest_version": 3,
  "name": "GitHub Folder Viewer",
  "version": "1.0",
  "description": "View GitHub folders like an editor.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
